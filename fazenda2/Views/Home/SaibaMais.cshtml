    /* Estilos Customizados */
    .container h1, .container h2 {
        font-weight: bold;
    }

    .list-group-item {
        font-size: 1.1em;
    }

    .text-success {
        color: #28a745;
    }

    .btn-secondary {
        background-color: #6c757d;
        border-color: #6c757d;
    }

        .btn-secondary:hover {
            background-color: #5a6268;
            border-color: #545b62;
        }
</style>
