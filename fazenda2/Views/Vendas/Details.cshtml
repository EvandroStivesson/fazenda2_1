@model fazenda2.Models.Venda

@{
    ViewData["Title"] = "Detalhes da Venda";
}

<!-- Título Principal -->
<div class="text-center">
    <h1>Detalhes da Venda</h1>
    <h4>Informações sobre a venda</h4>
    <hr />
</div>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h4>Detalhes da Venda</h4>
            <hr />
            <table class="table table-bordered">
                <tbody>
                    <tr>
                        <td>
                            <strong>@Html.DisplayNameFor(model => model.DataVenda)</strong>
                        </td>
                        <td>
                            @Html.DisplayFor(model => model.DataVenda)
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <strong>@Html.DisplayNameFor(model => model.Total)</strong>
                        </td>
                        <td>
                            @Html.DisplayFor(model => model.Total)
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <strong>@Html.DisplayNameFor(model => model.Cliente)</strong>
                        </td>
                        <td>
                            @Html.DisplayFor(model => model.Cliente.Nome)
                        </td>
                    </tr>
                </tbody>
            </table>

            <div class="text-center">
                <a asp-action="Edit" asp-route-id="@Model?.VendaId" class="btn btn-primary me-2">Editar Venda</a>
                <a asp-action="Index" class="btn btn-outline-secondary">Voltar para a Lista</a>
            </div>
        </div>
    </div>
</div>
