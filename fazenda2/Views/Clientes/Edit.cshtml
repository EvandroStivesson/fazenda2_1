@model fazenda2.Models.Cliente

@{
    ViewData["Title"] = "Editar Cliente";
}

<!-- Título Principal -->
<div class="text-center">
    <h1>Editar Cliente</h1>
    <h4>Preencha as informações do cliente</h4>
    <hr />
</div>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <!-- Formulário de Edição -->
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="ClienteId" />
                <table class="table table-bordered">
                    <tbody>
                        <tr>
                            <td>
                                <label asp-for="Nome" class="control-label"></label>
                                <input asp-for="Nome" class="form-control" />
                                <span asp-validation-for="Nome" class="text-danger"></span>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <label asp-for="Email" class="control-label"></label>
                                <input asp-for="Email" class="form-control" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <label asp-for="Senha" class="control-label"></label>
                                <input type="password" asp-for="Senha" class="form-control" />
                                <span asp-validation-for="Senha" class="text-danger"></span>
                            </td>
                        </tr>
                    </tbody>
                </table>

                <div class="text-center">
                    <input type="submit" value="Salvar" class="btn btn-primary me-2" /> <!-- Margem à direita -->
                    <a asp-action="Index" class="btn btn-outline-secondary">Voltar para a Lista</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
