@model fazenda2.Models.Funcionario

@{
    ViewData["Title"] = "Deletar Funcionário";
}

<!-- Título Principal -->
<div class="text-center">
    <h1 class="display-4">Deletar Funcionário</h1>
    <h3>Você tem certeza que deseja deletar este funcionário?</h3>
</div>

<div class="container">
    <h4>Informações do Funcionário</h4>
    <hr />
    <!-- Tabela para apresentação dos detalhes -->
    <table class="table table-bordered">
        <thead class="thead-light">
            <tr>
                <th>Campo</th>
                <th>Valor</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Html.DisplayNameFor(model => model.nome)</td>
                <td>@Html.DisplayFor(model => model.nome)</td>
            </tr>
            <tr>
                <td>@Html.DisplayNameFor(model => model.cpf)</td>
                <td>@Html.DisplayFor(model => model.cpf)</td>
            </tr>
            <tr>
                <td>@Html.DisplayNameFor(model => model.email)</td>
                <td>@Html.DisplayFor(model => model.email)</td>
            </tr>
            <tr>
                <td>@Html.DisplayNameFor(model => model.senha)</td>
                <td>@Html.DisplayFor(model => model.senha)</td>
            </tr>
            <tr>
                <td>@Html.DisplayNameFor(model => model.salario)</td>
                <td>@Html.DisplayFor(model => model.salario)</td>
            </tr>
        </tbody>
    </table>

    <div class="text-center">
        <form asp-action="DeleteConfirmed">
            <input type="hidden" asp-for="id_funcionario" />
            <input type="submit" value="Deletar" class="btn btn-danger mx-2" />
            <a class="btn btn-secondary mx-2" asp-action="Index">Voltar</a>
        </form>
    </div>
</div>

<!-- Estilos CSS -->
<style>
    /* Estilo do Título */
    .display-4 {
        color: #28a745; /* Cor verde para o título */
        font-weight: bold;
    }

    /* Estilo do Container */
    .container {
        margin-top: 20px;
    }

    /* Estilo da Tabela */
    .table {
        margin-top: 20px;
        background-color: #f9f9f9; /* Cor de fundo da tabela */
    }

    /* Estilo dos Botões */
    .btn-danger {
        font-weight: 500;
        border-width: 2px;
    }

    .btn-secondary {
        font-weight: 500;
        border-width: 2px;
    }

    .btn-danger:hover {
        background-color: #dc3545;
        color: white;
    }

    .btn-secondary:hover {
        background-color: #e2e6ea;
        color: #495057;
    }
</style>
