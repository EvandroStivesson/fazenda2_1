@model fazenda2.Models.Produto

@{
    ViewData["Title"] = "Criar Produto";
}

<!-- Título Principal -->
<div class="text-center">
    <h1 class="display-4 text-success">Criar Produto</h1>
    <h4>Preencha as informações do produto</h4>
    <hr />
</div>

<div class="row">
    <div class="col-md-6 offset-md-3">
        <!-- Centraliza o formulário -->
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Preco" class="control-label"></label>
                <input type="number" asp-for="Preco" class="form-control" />
                <span asp-validation-for="Preco" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Quantidade" class="control-label"></label>
                <input asp-for="Quantidade" class="form-control" />
                <span asp-validation-for="Quantidade" class="text-danger"></span>
            </div>
            <br/>
            <div class="form-group text-center">
                <!-- Alinha o botão ao centro -->
                <input type="submit" value="Criar" class="btn btn-success" /> <!-- Estilo consistente -->
            </div>
        </form>
    </div>
</div>

<br />
<div class="text-center">
    <a asp-action="Index" class="btn btn-outline-secondary">Voltar para a Lista</a> <!-- Estilo de botão consistente -->
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
