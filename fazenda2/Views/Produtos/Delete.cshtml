@model fazenda2.Models.Produto

@{
    ViewData["Title"] = "Delete";
}

<!-- Título Principal -->
<div class="text-center">
    <h1>Excluir Produto</h1>
    <h3>Tem certeza de que deseja excluir este produto?</h3>
</div>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h4>Detalhes do Produto</h4>
            <hr />
            <table class="table table-bordered table-hover">
                <thead class="thead-light">
                    <tr>
                        <th>Campo</th>
                        <th>Valor</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>@Html.DisplayNameFor(model => model.Nome)</td>
                        <td>@Html.DisplayFor(model => model.Nome)</td>
                    </tr>
                    <tr>
                        <td>@Html.DisplayNameFor(model => model.Preco)</td>
                        <td>@Html.DisplayFor(model => model.Preco)</td>
                    </tr>
                    <tr>
                        <td>@Html.DisplayNameFor(model => model.Quantidade)</td>
                        <td>@Html.DisplayFor(model => model.Quantidade)</td>
                    </tr>
                </tbody>
            </table>

            <form asp-action="DeleteConfirmed" class="text-center">
                <input type="hidden" asp-for="ProdutoId" />
                <div class="d-flex justify-content-center">
                    <input type="submit" value="Excluir" class="btn btn-danger mx-2" />
                    <a asp-action="Index" class="btn btn-outline-secondary mx-2">Voltar para a Lista</a>
                </div>
            </form>
        </div>
    </div>
</div>
