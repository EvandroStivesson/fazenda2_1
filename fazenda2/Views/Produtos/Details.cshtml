@model fazenda2.Models.Produto

@{
    ViewData["Title"] = "Detalhes do Produto";
}

<!-- Título Principal -->
<div class="text-center">
    <h1 class="display-4">Detalhes do Produto</h1>
</div>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
           
            <hr />
            <table class="table table-bordered table-hover">
                <thead class="thead-light">
                    <tr>
                        <th>Campo</th>
                        <th>Valor</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>@Html.DisplayNameFor(model => model.Nome)</td>
                        <td>@Html.DisplayFor(model => model.Nome)</td>
                    </tr>
                    <tr>
                        <td>@Html.DisplayNameFor(model => model.Preco)</td>
                        <td>@Html.DisplayFor(model => model.Preco)</td>
                    </tr>
                    <tr>
                        <td>@Html.DisplayNameFor(model => model.Quantidade)</td>
                        <td>@Html.DisplayFor(model => model.Quantidade)</td>
                    </tr>
                </tbody>
            </table>
            <div class="text-center">
                <a asp-action="Edit" asp-route-id="@Model?.ProdutoId" class="btn btn-outline-primary">Editar</a>
                <a asp-action="Index" class="btn btn-outline-secondary mx-2">Voltar para a Lista</a>
            </div>
        </div>
    </div>
</div>
