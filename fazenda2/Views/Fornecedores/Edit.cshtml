@model fazenda2.Models.Fornecedor

@{
    ViewData["Title"] = "Editar Fornecedor";
}

<!-- Título Principal -->
<div class="text-center">
    <h1>Editar Fornecedor</h1>
    <h4>Atualize as informações do fornecedor</h4>
    <hr />
</div>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="FornecedorId" />

                <div class="form-group">
                    <label asp-for="Cnpj" class="control-label"></label>
                    <input asp-for="Cnpj" class="form-control" />
                    <span asp-validation-for="Cnpj" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Nome" class="control-label"></label>
                    <input asp-for="Nome" class="form-control" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Contato" class="control-label"></label>
                    <input asp-for="Contato" class="form-control" />
                    <span asp-validation-for="Contato" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Endereco" class="control-label"></label>
                    <input asp-for="Endereco" class="form-control" />
                    <span asp-validation-for="Endereco" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Tipo_produto" class="control-label"></label>
                    <input asp-for="Tipo_produto" class="form-control" />
                    <span asp-validation-for="Tipo_produto" class="text-danger"></span>
                </div>
                <br/>
                <div class="text-center">
                    <input type="submit" value="Salvar" class="btn btn-primary me-2" /> <!-- Botão de salvar -->
                    <a asp-action="Index" class="btn btn-outline-secondary">Voltar para a Lista</a> <!-- Botão de voltar -->
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
